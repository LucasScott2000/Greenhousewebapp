const mongoose = require('mongoose');
const Schema = mongoose.Schema;

const Settings = new Schema({
    uniqueId: {
        type: String, //use ObjectId if i want MongoDB to generate unique IDs
        required: true,
        unique: true
    },
    airTemperature: {
        type: Number,
        required: true
    },
    soilTemperature: {
        type: Number,
        required: true
    },
    lightLevel: {
        type: Number,
        required: true
    },
    humidityLevel: {
        type: Number,
        required: true
    },
    co2Level: {
        type: Number,
        required: true
    },
    soilMoisture: {
        type: Number,
        required: true
    },
    soilConductivity: {
        type: Number,
        required: true
    },
    soilPhLevel: {
        type: Number,
        required: true
    },
    airFlowRate: {
        type: Number,
        required: true
    },
    cameraReading: {
        type: String, //  image path or URL
        required: true
    }
});

// additional validations can be added, such as min, max, enum, etc., based on requirements

module.exports = mongoose.model('Settings', Settings);
